<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f4f4f4">

    <!-- CardView for a neat container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
    </androidx.cardview.widget.CardView>

    <!-- RelativeLayout inside CardView -->

    <!-- Bottom Navigation -->

    <RelativeLayout
        android:layout_width="382dp"
        android:layout_height="731dp"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Destination -->
        <TextView
            android:id="@+id/textDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Destination"
            android:textColor="#FF000000"
            android:textSize="54sp"
            android:textStyle="bold" />

        <!-- Start Date -->
        <TextView
            android:id="@+id/textStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textDestination"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-1dp"
            android:text="Start Date"
            android:textColor="#FF000000"
            android:textSize="25sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/textEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textStartDate"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="-36dp"
            android:text="End Date"
            android:textColor="#FF000000"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textBudgetRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEndDate"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="1dp"
            android:text="Budget Range"
            android:textColor="#FF000000"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textTravelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textBudgetRange"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="1dp"
            android:text="Travel Type"
            android:textColor="#FF000000"
            android:textSize="25sp"
            android:textStyle="normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDayCards"
            android:layout_width="350dp"
            android:layout_height="526dp"
            android:layout_below="@id/textTravelType"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerViewDayCards"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="-352dp"
            android:text="No day cards available."
            android:textColor="#555"
            android:textSize="25sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@color/blue_500"
        app:itemIconTint="@drawable/bottom_nav_colors"
        app:itemTextColor="@drawable/bottom_nav_colors"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
